# Environment for MMR app (copy to /etc/mmr.env on the server)
# Generate a long random string, e.g. `openssl rand -hex 32`
SECRET_KEY=replace-with-long-random-hex
# Set a strong admin password for /admin_login
ADMIN_PASSWORD=replace-with-strong-password
# SQLite database stored on persistent disk
MMR_DB_PATH=/var/lib/mmr/mmr.db
# Optional: Discord webhook for match notifications
DISCORD_WEBHOOK_URL=
# Optional: Bot token used for REST lookups of user avatars (no gateway connection needed)
DISCORD_BOT_TOKEN=
# Cookies and scheme
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=Lax
PREFERRED_URL_SCHEME=https
# Debug should be disabled in production
FLASK_DEBUG=false
